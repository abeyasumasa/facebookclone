<h1>投稿一覧</h1>

<table>

   <tbody>
     <% @pictures.each do |picture| %>
       <div>
         <span>ユーザー名:</span>
         <span><%= picture.user.name %></span><br>
         <span> コメント</span>
         <p><%= picture.content %></p>
         <p><%= image_tag picture.image.url %></p>
      <% if logged_in? %>
         <span><%= button_to '詳細', picture,class: 'btn btn-default'  %></span>
         <span><%= button_to '編集', edit_picture_path(picture),class: 'btn btn-default'  %></span>
         <span><%= button_to '削除', picture, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-default'  %></span>
      <% end %>
       </div>
     <% end %>
   </tbody>
</table>

<br>
<% if logged_in? %>
  <%= button_to '写真を投稿', new_picture_path,class: 'btn btn-info' %>
<% end %>
